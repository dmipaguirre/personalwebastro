---
import "../styles/global.css";
---

<nav class="navbar-container" id="navbar">
  <div class="navbar-content">
    <div class="logo-container">
      <a href="/" class="logo">PS</a>
    </div>

    <button
      class="hamburger"
      id="hamburger"
      aria-expanded="false"
      aria-controls="menu-links"
    >
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </button>

    <ul class="links-container" id="menu-links">
      <li><a href="/about/" class="link-item">About</a></li>
      <li><a href="/blog/" class="link-item">Blog</a></li>
      <li><a href="/projects/" class="link-item">Projects</a></li>
    </ul>
  </div>
</nav>

<script>
  window.addEventListener("scroll", () => {
    const navbar = document.getElementById("navbar");
    if (navbar) {
      if (window.scrollY > 2) {
        navbar.classList.add("scrolled");
      } else {
        navbar.classList.remove("scrolled");
      }
    }
  });

  const hamburger = document.getElementById("hamburger");
  const navMenu = document.getElementById("menu-links");

  hamburger?.addEventListener("click", () => {
    hamburger?.classList.toggle("active");
    navMenu?.classList.toggle("active");
  });

  const navLinks = navMenu?.querySelectorAll(".link-item");

  navLinks?.forEach((link) => {
    link?.addEventListener("click", () => {
      hamburger?.classList.remove("active");
      navMenu?.classList.remove("active");
    });
  });
</script>

<style>
  .hamburger {
    display: none;
    background: none;
    border: 0;
    cursor: pointer;
    padding: 0;
    width: 30px;
    height: 30px;
    position: relative;
    z-index: 1000;
  }

  .bar {
    display: block;
    height: 3px;
    width: 100%;
    border-radius: 3px;
    margin: 6px 0;
    background: var(--color-primary);
    transition: all 0.3s ease-in-out;
  }

  .hamburger.active .bar:nth-child(1) {
    transform: translateY(9px) rotate(45deg);
  }

  .hamburger.active .bar:nth-child(2) {
    opacity: 0;
  }

  .hamburger.active .bar:nth-child(3) {
    transform: translateY(-9px) rotate(-45deg);
  }

  .navbar-container {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background-color: var(--color-bg);
    transition: all 0.3s ease;

    &.navbar-container.scrolled {
      background-color: var(--color-bg);
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
      backdrop-filter: blur(10px);
    }
  }

  .navbar-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.2rem 1.3rem;
    width: var(--width-container);
    max-width: 1200px;
    margin: 0 auto;
    font-family: var(--font-title), sans-serif;
  }
  .logo-container {
    font-size: 2rem;
    font-weight: bold;
  }
  .logo {
    text-decoration: none;
    color: var(--color-primary);
    font-size: 2.9rem;
  }
  .links-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    list-style: none;
    margin: 0;
    gap: 2rem;
  }
  .links-container a {
    font-family: var(--font-title);
    font-size: 1.2rem;
    text-decoration: none;
    color: var(--color-text);
  }
  .link-item {
    text-transform: uppercase;
    transition: color 0.3s ease;
  }

  .links-container .link-item:hover {
    color: var(--color-primary);
  }
  @media (width < 1200px) {
    .navbar-container {
      width: 100%;
    }
    .navbar-content {
      width: 100%;
      padding: 0.2rem 1.3rem;
      margin: 0;
    }
  }
  @media (width < 600px) {
    .links-container {
      position: absolute;
      top: 100%;
      left: 100%; /* Inicialmente fuera de la pantalla (oculto) */
      width: 100%;
      background-color: var(--color-bg);
      padding: 1rem;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
      backdrop-filter: blur(10px);
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
      transition: left 0.3s ease-in-out;
    }

    .links-container.active {
      left: 0;
    }

    .hamburger {
      display: block;
    }
  }
</style>
