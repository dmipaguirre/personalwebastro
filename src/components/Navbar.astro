---
import "../styles/global.css";
---

<nav class="navbar-container">
  <div class="logo-container">
    <a href="/" class="logo">PS</a>
  </div>
  <ul class="links-container">
    <li><a href="/about/" class="link-item">About</a></li>
    <li><a href="/blog/" class="link-item">Blog</a></li>
    <li><a href="/projects/" class="link-item">Projects</a></li>
  </ul>
</nav>

<style>
  .navbar-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.2rem 1.3rem;
    width: var(--width-container);
    max-width: 1200px;
    margin: 0 auto;
    font-family: "BebasNeue", sans-serif;
  }
  .logo-container {
    font-size: 2rem;
    font-weight: bold;
  }
  .logo {
    text-decoration: none;
    color: var(--color-primary);
    font-size: 2.9rem;
  }
  .links-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    list-style: none;
    margin: 0;
    padding: 1.2rem;
    gap: 2rem;
  }
  .link-item {
    text-decoration: none;
    color: var(--color-text);
    font-size: 1.2rem;
    text-transform: uppercase;
    transition: color 0.3s ease;
  }

  .link-item:hover {
    color: var(--color-primary);
  }
</style>
