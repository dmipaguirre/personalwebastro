---
import "../styles/global.css";
import ButtonColor from "./ButtonColor.astro";
---

<nav class="navbar-container" id="navbar">
  <div class="navbar-content">
    <div class="logo-container">
      <a href="/" class="logo">!MP</a>
    </div>

    <button
      class="hamburger"
      id="hamburger"
      aria-expanded="false"
      aria-controls="menu-links"
      aria-label="Menú de navegación"
    >
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </button>
    <div class="link-theme-container" id="menu-links">
      <ul class="links-container">
        <li><a href="/about/" class="link-item">About</a></li>
        <li><a href="/blog/" class="link-item">Blog</a></li>
        <li><a href="/projects/" class="link-item">Projects</a></li>
      </ul>
      <ButtonColor />
    </div>
  </div>
</nav>

<script>
  // Scroll optimizado con requestAnimationFrame
  let ticking = false;
  window.addEventListener("scroll", () => {
    if (!ticking) {
      window.requestAnimationFrame(() => {
        const navbar = document.getElementById("navbar");
        if (navbar) {
          navbar.classList.toggle("scrolled", window.scrollY > 2);
        }
        ticking = false;
      });
      ticking = true;
    }
  }); // Terminación de scroll con requestAnimationFrame

  const hamburger = document.getElementById("hamburger");
  const navMenu = document.getElementById("menu-links");

  if (hamburger && navMenu) {
    hamburger.addEventListener("click", () => {
      const isActive = hamburger.classList.contains("active");

      hamburger.classList.toggle("active");
      navMenu.classList.toggle("active");
      hamburger.setAttribute("aria-expanded", (!isActive).toString());

      document.body.style.overflow = isActive ? "" : "hidden";
    });

    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && navMenu.classList.contains("active")) {
        hamburger.classList.remove("active");
        navMenu.classList.remove("active");
        hamburger.setAttribute("aria-expanded", "false");
        document.body.style.overflow = "";
      }
    });

    // Cerrar al hacer click en los links
    const navLinks = navMenu.querySelectorAll(".link-item");
    navLinks.forEach((link) => {
      link.addEventListener("click", () => {
        hamburger.classList.remove("active");
        navMenu.classList.remove("active");
        hamburger.setAttribute("aria-expanded", "false");
        document.body.style.overflow = "";
      });
    });
  }
</script>

<style>
.logo-container {
  font-size: 2rem;
  font-weight: bold;
}

.logo {
  text-decoration: none;
  color: var(--color-primary);
  font-size: 2.9rem;
}

/* Hamburger Menu */
.hamburger {
  display: none;
  background: none;
  border: 0;
  cursor: pointer;
  padding: 0;
  width: 30px;
  height: 30px;
  position: relative;
  z-index: 1000;
}

.bar {
  display: block;
  height: 3px;
  width: 100%;
  border-radius: 3px;
  margin: 6px 0;
  background: var(--color-text);
  transition: all 1s
    linear(0, 0.039 1%, 0.153 2.1%, 1.022 7.8%, 1.172 9.6%, 1.231 11.4%, 1.23 12.5%, 1.204 13.8%, 0.99 19.9%, 0.959 21.6%, 0.946 23.3%, 0.952 25.7%, 1.002 31.8%, 1.012 35.1%, 0.997 46.9%, 1);
}

.hamburger.active .bar {
  background: var(--color-primary);
}

.hamburger.active .bar:nth-child(1) {
  transform: translateY(9px) rotate(45deg);
}

.hamburger.active .bar:nth-child(2) {
  opacity: 0;
}

.hamburger.active .bar:nth-child(3) {
  transform: translateY(-9px) rotate(-45deg);
}

.navbar-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background-color: var(--color-bg);
  height: 60px;
  transition: all 0.3s ease;
}

.navbar-container.scrolled {
  background-color: var(--color-bg);
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(10px);
}

.navbar-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 1.3rem;
  padding-right: 1.3rem;
  width: 100%;
  max-width: 1200px;
  height: 100%;
  margin: 0 auto;
  font-family: var(--font-title);
}

.link-theme-container {
  display: flex;
  align-items: center;
  gap: 2rem;
}

.links-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  list-style: none;
  margin: 0;
  gap: 2rem;
}

.links-container a {
  font-family: var(--font-title);
  font-size: 1.2rem;
  text-decoration: none;
  color: var(--color-text);
}

.link-item {
  text-transform: uppercase;
  transition: color 0.3s ease;
}

.links-container .link-item:hover {
  color: var(--color-primary);
}

@media (width < 1199px) {
  .navbar-container {
    width: 100%;
  }
  
  .navbar-content {
    width: 100%;
    margin: 0;
  }
}

/* Mobile */
@media (width < 600px) {
  .hamburger {
    display: block;
  }

  .link-theme-container {
    position: absolute;
    top: 100%;
    right: -100%;
    width: 100%;
    padding: 0.1rem 0;
    background-color: var(--color-bg);
    box-shadow: 0 16px 20px rgba(0, 0, 0, 0.15);
    backdrop-filter: blur(10px);
    border-bottom-left-radius: 1rem;
    border-bottom-right-radius: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    overflow-y: auto;
    transition: right 0.3s
      linear(
        0,
        0.012 0.9%, 0.05 2%, 0.411 9.2%, 0.517 11.8%, 0.611 14.6%,
        0.694 17.7%, 0.765 21.1%, 0.824 24.8%, 0.872 28.9%, 0.91 33.4%,
        0.939 38.4%, 0.977 50.9%, 0.994 68.4%, 1
      );
  }

  .link-theme-container.active {
    right: 0;
  }

  .links-container {
    flex-direction: column;
    width: 100%;
    gap: 0;
  }

  .links-container li {
    width: 100%;
  }

  .links-container li a {
    display: block;
    width: 100%;
    padding: 1rem 0;
    font-size: 1.5rem;
    text-align: center;
  }
}
</style>
