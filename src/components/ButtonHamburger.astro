    aria-expanded="false"
    aria-controls="mobile-menu"
  >
    <span></span>
    <span></span>
    <span></span>
  </button>
</div>
<style>
  .navbar {
    position: relative;
  }
  .hamburger {
    display: none;
    flex-direction: column;
    cursor: pointer;
    background: none;
    border: none;
    padding: 0;
    gap: 6px;
  }
  .hamburger span {
    width: 34px;
    height: 2px;
    background-color: var(--color-text);
    transition: 0.3s;
    border-radius: 6px;
  }
  .hamburger:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 4px;
  }
  .hamburger.is-active span:nth-child(1) {
    transform: translateY(8px) rotate(45deg);
  }

  .hamburger.is-active span:nth-child(2) {
    opacity: 0;
  }

  .hamburger.is-active span:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg);
  }
  @media (width < 600px) {
    .hamburger {
      display: flex;
    }
  }
</style>
