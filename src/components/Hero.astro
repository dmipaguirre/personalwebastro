---
import SocialIcon from "./icons/SocialIcon.astro";
---

<section class="hero">
  <div class="hero-text">
    <p class="hero-name">Hi, I'm Miguel.</p>
    <h1>
      A creative
      <span class="hero-skill">Freelance Web Developer</span>
    </h1>
    <p>
      â€” highly passionate about technology, programming, cybersecurity, and
      robotics.
    </p>
  </div>
  <div class="hero-avatar">
    <div class="avatar-box"></div>
    <img
      src="/images/Users.avif"
      alt="Miguel's profile photo"
      width="528"
      height="528"
      loading="eager"
      decoding="sync"
    />
  </div>
  <div class="hero-icons">
    <SocialIcon />
  </div>
</section>

<style>
  /* --- Layout principal --- */
  .hero {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.2rem 1.3rem;
    width: 100%;
    max-width: 1200px;
    margin: 8rem auto 4rem auto;
    font-family: var(--font-title);
    gap: 2rem;
  }
  .hero-text {
    flex: 1;
    min-width: 0;
  }
  .hero-text .hero-name {
    font-size: 2.5rem;
    font-family: var(--font-text);
    line-height: 1.2;
    margin: 1rem 0;
  }

  .hero-text h1 {
    font-family: var(--font-title);
    color: var(--color-text);
    font-size: 4.6rem;
    line-height: 1.2;
    margin: 1rem 0;
  }

  .hero-skill {
    font-family: var(--font-style);
    font-weight: 100;
    font-size: 7rem;
    line-height: 0.7;
    color: var(--color-primary);
    display: block;
  }

  .hero-text p {
    font-family: var(--font-text);
    color: var(--color-text);
    font-size: 2.6rem;
    line-height: 1;
    margin: 1rem 0;
  }

  .hero-avatar .avatar-box {
    position: absolute;
    width: 90%;
    height: 90%;
    background-color: var(--color-primary);
    opacity: 0.4;
    border-radius: 6%;
    transform: rotate(5deg);
    transition: transform 0.6s cubic-bezier(0.25, 0.8, 0.25, 1);
    z-index: -1;
  }
  .hero-avatar:hover .avatar-box {
    transform: rotate(3deg);
  }
  .hero-avatar {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    width: auto;
    flex: 1;
    aspect-ratio: 1;
    align-self: center;
    
  }

  .hero-avatar img {
    position: absolute;
    width: 90%;
    height: 90%;
    border-radius: 6%;
    object-fit: cover;
    z-index: 1;
    box-shadow: 0 0 4px var(--color-primary);
  }

  .hero-icons {
    min-width: fit-content;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    align-self: center;
    margin-left: 2rem;
  }

  @media (width < 1199px) {
      .hero {
      width: 100%;
      justify-content: center;
  }
  }

  @media (width < 900px) {
    .hero {
      width: 100%;
      gap: 1rem;
    }

    .hero-text h1 {
      font-size: 3.5rem;
    }
    .hero-text p {
      font-size: 1.6rem;
    }
    .hero-skill {
      font-size: 5rem;
      display: block;
    }
  }

  @media (width < 600px) {
    .hero {
      margin: 4rem 0;
    }
    .hero-avatar {
      width: 80%;
    }

    .hero {
      flex-direction: column;      
    }

    .hero-icons {
      flex-direction: row;
      margin: 0;
      margin-left: 0;
    }
  }
</style>
