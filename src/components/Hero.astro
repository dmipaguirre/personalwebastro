---
import SocialIcon from "./icons/SocialIcon.astro";
import "../styles/global.css";

const socialMedia = [
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/dmpaeza/",
    icon: "icon-tabler-brand-linkedin",
  },
  {
    name: "Instagram",
    url: "https://www.instagram.com/dmiguelpaez/",
    icon: "icon-tabler-brand-instagram",
  },
  {
    name: "Facebook",
    url: "https://www.facebook.com/miguel.paezaguirre",
    icon: "icon-tabler-brand-facebook",
  },
];
---

<section class="hero-container">
  <div class="txt-hero">
    <p class="name">Hi, I'm Miguel</p>
    <h1>
      A creative
      <span class="txt-skill">Freelance Web Developer</span>
    </h1>
    <p>
      â€” highly passionate about technology, programming, cybersecurity, and
      robotics.
    </p>
  </div>
  <div class="avatar-hero">
    <img
      src="/images/Users.avif"
      alt="Miguel's profile photo"
      width="528"
      height="528"
      loading="eager"
      decoding="sync"
    />
  </div>
  <div class="icons-container">
    {socialMedia.map((social) => (
      <SocialIcon {...social} />
    ))}
  </div>
</section>
<style>
  /* --- Layout principal --- */
  .hero-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.2rem 1.3rem;
    width: var(--width-container);
    max-width: 1200px;
    margin: 8rem auto 4rem auto;
    font-family: var(--font-title);
    align-items: flex-start;
  }

  .txt-hero {
    width: 30%;
  }

  .txt-hero .name {
    font-size: 2.5rem;
    font-family: var(--font-text);
    line-height: 1.2;
    margin: 1rem 0;
  }

  .txt-hero h1 {
    font-family: var(--font-title);
    color: var(--color-text);
    font-size: 4.6rem;
    line-height: 1.2;
    margin: 1rem 0;
  }

  .txt-skill {
    font-family: var(--font-style);
    line-height: 0.1;
    font-weight: 100;
    font-size: 7rem;
    color: var(--color-primary);
  }

  .txt-hero p {
    font-family: var(--font-text);
    color: var(--color-text);
    font-size: 2.6rem;
    line-height: 1;
    margin: 1rem 0;
  }

  .avatar-hero {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    width: 30%;
    flex: 1;
    padding-top: 0;
    margin-top: 0;
    align-self: center;
  }

  .avatar-hero img {
    width: 33rem;
    height: 33rem;
    border-radius: 50%;
    object-fit: cover;
    margin: 0;
    box-shadow: 0 0 10px var(--color-primary);
  }

  .icons-container {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    align-self: center;
  }

  @media (width < 1200px) {
    .hero-container {
      flex-wrap: wrap;
      gap: 1rem;
      width: 100%;
    }
    .txt-hero,
    .avatar-hero,
    .icons-container {
      min-width: 250px;
      gap: 1rem;
      flex: 1 1 300px;
    }
    .icons-container {
      flex-direction: row;
      margin: 0;
    }
    .txt-hero h1 {
      font-size: 3.5rem;
    }
    .txt-skill {
      font-size: 5rem;
    }

    .avatar-hero img {
      width: 100%;
      height: 100%;
    }
  }

  @media (width < 600px) {
    .hero-container {
      margin-left: 0;
      margin-right: 0;
    }
    .txt-hero,
    .avatar-hero,
    .icons-container {
      min-width: 100%;
      gap: 1rem;
      flex: 1 1 300px;
    }
  }
</style>
