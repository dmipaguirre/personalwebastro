---
import SocialIcon from "./icons/SocialIcon.astro";
import "../styles/global.css";

const socialMedia = [
  {
    url: "https://www.linkedin.com/in/dmpaeza/",
    icon: "icon-tabler-brand-linkedin",
  },
  {
    url: "https://www.instagram.com/dmiguelpaez/",
    icon: "icon-tabler-brand-instagram",
  },
  {
    url: "https://www.facebook.com/miguel.paezaguirre",
    icon: "icon-tabler-brand-facebook",
  },
];
---

<section class="hero-container">
  <div class="txt-hero">
    <p class="name">Hi, I'm Miguel.</p>
    <h1>
      A creative
      <span class="txt-skill">Freelance Web Developer</span>
    </h1>
    <p>
      â€” highly passionate about technology, programming, cybersecurity, and
      robotics.
    </p>
  </div>
  <div class="avatar-hero">
    <div class="box"></div>
    <img
      src="/images/Users.avif"
      alt="Miguel's profile photo"
      width="528"
      height="528"
      loading="eager"
      decoding="sync"
    />
  </div>
  <div class="icons-container">
    {socialMedia.map((social) => <SocialIcon {...social} />)}
  </div>
</section>
<style>
  /* --- Layout principal --- */
  .hero-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.2rem 1.3rem;
    width: var(--width-container);
    max-width: 1200px;
    margin: 8rem auto 4rem auto;
    font-family: var(--font-title);
    gap: 1rem;
  }

  .txt-hero {
    width: 35%;
  }

  .txt-hero .name {
    font-size: 2.5rem;
    font-family: var(--font-text);
    line-height: 1.2;
    margin: 1rem 0;
  }

  .txt-hero h1 {
    font-family: var(--font-title);
    color: var(--color-text);
    font-size: 4.6rem;
    line-height: 1.2;
    margin: 1rem 0;
  }

  .txt-skill {
    font-family: var(--font-style);
    font-weight: 100;
    font-size: 7rem;
    line-height: .7;
    color: var(--color-primary);
    display: block;
  }

  .txt-hero p {
    font-family: var(--font-text);
    color: var(--color-text);
    font-size: 2.6rem;
    line-height: 1;
    margin: 1rem 0;
  }

  .avatar-hero .box {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: var(--color-primary);
    opacity: 0.4;
    border-radius: 6%;
    transform: rotate(5deg);
    transition: transform 0.6s cubic-bezier(0.25, 0.8, 0.25, 1);
    z-index: -1;
  }
  .avatar-hero:hover .box {
    transform: rotate(3deg);
  }
  .avatar-hero {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    width: min(29rem, 80vw);
    aspect-ratio: 1;
    align-self: center;
  }

  .avatar-hero img {
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 6%;
    object-fit: cover;
    z-index: 1;
    box-shadow: 0 0 4px var(--color-primary);
  }

  .icons-container {
    min-width: fit-content;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    align-self: center;
  }

  @media (width < 1200px) {
    .hero-container {
      flex-wrap: wrap;
      gap: 1.9rem;
      width: 100%;
      justify-content: center;
    }

    .icons-container {
      flex-direction: row;
      margin: 0;
    }
    .txt-hero {
      width: 100%;
    }
    .txt-hero h1 {
      font-size: 3.5rem;
    }
    .txt-hero p {
      font-size: 1.6rem;
    }
    .txt-skill {
      font-size: 5rem;
      display: block;
    }
  }

  @media (width < 600px) {
    .avatar-hero {
      width: 70%;
    }
  }
</style>
