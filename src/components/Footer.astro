---
import "../styles/global.css";
const currentYear = new Date().getFullYear();
---

<section class="footer-container">
    <p>&copy; <span id="current-year"></span> SP. Todos los derechos reservados.</p>
</section>

<script>
    // 1. Envuelve el código para que solo se ejecute cuando el DOM esté listo.
    document.addEventListener('DOMContentLoaded', function() {
        const yearElement = document.getElementById('current-year');
        
        // 2. Comprueba que el elemento existe antes de intentar modificarlo.
        if (yearElement) {
            yearElement.textContent = new Date().getFullYear().toString();
        }
    });
</script>

<style>
    .footer-container {
        width: var(--width-container);
        max-width: 1200px;
        margin: 0 auto;
        padding: 1rem;
        text-align: center;
        border-top: 1px solid var(--color-primary);
    }
    .footer-container p {
        font-family: "Instrument Serif", sans-serif;
        font-size: 1.2rem;
        opacity: 0.4;
    }
</style>