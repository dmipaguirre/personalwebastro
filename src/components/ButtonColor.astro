        ></path></svg
      >
    </span>
  </button>
</div>

<script>
  const html = document.documentElement;
  const btn = document.querySelector(".theme-btn");

  // Leer tema guardado
  if (localStorage.getItem("theme") === "dark") {
    html.classList.add("darkmode");
  }

  btn.addEventListener("click", () => {
    // toggle de tema
    const isDark = html.classList.toggle("darkmode");
    localStorage.setItem("theme", isDark ? "dark" : "light");
    btn.classList.add("animating");
    setTimeout(() => btn.classList.remove("animating"), 500);
  });
</script>

<style>
  .theme-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    cursor: pointer;
    border: none;
    background: transparent;
    padding: 0.5rem;
    border-radius: 50%;
  }

  .theme-btn span {
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.3s ease;
  }

  /* Estado inicial: Sol visible */
  .theme-btn .moon-icon {
    /* luna */
    opacity: 0;
    transform: scale(0.7);
  }

  .theme-btn .sun-icon {
    /* sol */
    opacity: 1;
    transform: scale(1);
  }

  /* Cuando activas modo oscuro */
  :global(.darkmode) .theme-btn .moon-icon {
    /* luna visible */
    opacity: 1;
    transform: scale(1);
  }

  :global(.darkmode) .theme-btn .sun-icon {
    /* sol oculto */
    opacity: 0;
    transform: scale(0.7);
  }
  .theme-btn svg {
    color: var(--color-text);
  }

  .theme-btn.animating svg {
    animation: rotateBounce 0.5s ease-out;
  }

  @keyframes rotateBounce {
    0% {
      transform: rotate(0deg) scale(1);
    }
    40% {
      transform: rotate(120deg) scale(1.3);
    }
    70% {
      transform: rotate(200deg) scale(0.9);
    }
    100% {
      transform: rotate(360deg) scale(1);
    }
  }
  @media (width < 600px) {
    .theme-wrapper {
      padding: 1rem 0;
    }
  }
</style>
