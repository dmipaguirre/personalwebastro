---
import "../styles/global.css";
---

<div class="button-theme-container">
  <button class="button-theme" id="theme-switch">
    <span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="icon icon-tabler icons-tabler-filled icon-tabler-moon"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
          d="M12 1.992a10 10 0 1 0 9.236 13.838c.341 -.82 -.476 -1.644 -1.298 -1.31a6.5 6.5 0 0 1 -6.864 -10.787l.077 -.08c.551 -.63 .113 -1.653 -.758 -1.653h-.266l-.068 -.006l-.06 -.002z"
        ></path></svg
      >
    </span>
    <span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="icon icon-tabler icons-tabler-filled icon-tabler-sun"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
          d="M12 19a1 1 0 0 1 .993 .883l.007 .117v1a1 1 0 0 1 -1.993 .117l-.007 -.117v-1a1 1 0 0 1 1 -1z"
        ></path><path
          d="M18.313 16.91l.094 .083l.7 .7a1 1 0 0 1 -1.32 1.497l-.094 -.083l-.7 -.7a1 1 0 0 1 1.218 -1.567l.102 .07z"
        ></path><path
          d="M7.007 16.993a1 1 0 0 1 .083 1.32l-.083 .094l-.7 .7a1 1 0 0 1 -1.497 -1.32l.083 -.094l.7 -.7a1 1 0 0 1 1.414 0z"
        ></path><path
          d="M4 11a1 1 0 0 1 .117 1.993l-.117 .007h-1a1 1 0 0 1 -.117 -1.993l.117 -.007h1z"
        ></path><path
          d="M21 11a1 1 0 0 1 .117 1.993l-.117 .007h-1a1 1 0 0 1 -.117 -1.993l.117 -.007h1z"
        ></path><path
          d="M6.213 4.81l.094 .083l.7 .7a1 1 0 0 1 -1.32 1.497l-.094 -.083l-.7 -.7a1 1 0 0 1 1.217 -1.567l.102 .07z"
        ></path><path
          d="M19.107 4.893a1 1 0 0 1 .083 1.32l-.083 .094l-.7 .7a1 1 0 0 1 -1.497 -1.32l.083 -.094l.7 -.7a1 1 0 0 1 1.414 0z"
        ></path><path
          d="M12 2a1 1 0 0 1 .993 .883l.007 .117v1a1 1 0 0 1 -1.993 .117l-.007 -.117v-1a1 1 0 0 1 1 -1z"
        ></path><path
          d="M12 7a5 5 0 1 1 -4.995 5.217l-.005 -.217l.005 -.217a5 5 0 0 1 4.995 -4.783z"
        ></path></svg
      >
    </span>
  </button>
</div>

<script>
const themeSwitch = document.getElementById("theme-switch");
const body = document.body;
if (themeSwitch) {
    // Now TypeScript knows themeSwitch is not null here
    themeSwitch.addEventListener('click', () => {
        body.classList.toggle("darkmode");
    });
}
</script>

<style>
  #theme-switch span:last-child {
    display: none;
  }

  .darkmode #theme-switch span:first-child {
    display: block;
  }

  .darkmode #theme-switch span:last-child {
    display: block;
  }


  .button-theme {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: transparent;
    border: none;
    padding: 1rem 0;
  }

  .button-theme svg {
    fill: var(--color-text);
  }

  .button-theme svg:hover {
    color: var(--color-primary);
    transform: translateY(-2px);
  }

  .button-theme span {
    display: inline-block;
    line-height: 0;
  }
</style>
