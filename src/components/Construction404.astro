<section class="section-container">
  <div class="pocket-wrapper">
    <div class="photo-item">
      <img
        src="https://images.unsplash.com/photo-1514888286974-6c03e2ca1dba?ixlib=rb-1.2.1&auto=format&fit=crop&w=300&q=80"
        alt="Gato asomándose"
      />
    </div>
    <div class="pocket">
      <div class="pocket-tag"></div>
    </div>
  </div>
</section>
<style>
  .section-container {
    margin-top: 200px;
  }

  .pocket-wrapper {
    position: relative;
    width: 250px;
    height: 250px;
    display: flex;
    justify-content: center;
    align-items: flex-end;
    margin: 100px auto;
    cursor: pointer; /*Pendiente definir en esta parte*/
  }

  .photo-item {
    position: absolute;
    width: 180px;
    padding: 10px 10px 25px 10px;
    background: white;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    z-index: 1;
    bottom: 50px;
    transition:
      transform 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275),
      rotate 0.5s ease; /* Efecto rebote suave */
    transform: rotate(-4deg); /* Un poco inclinada inicialmente */
    border-radius: 4px;
  }

  .photo-item img {
    width: 100%;
    height: auto;
    clip-path: inset(0 round 8px);
  }

  .pocket {
    position: relative;
    z-index: 100;
    width: 220px;
    height: 200px;
    background-color: #3b5998;
    background-image:
      repeating-linear-gradient(
        45deg,
        transparent,
        transparent 1px,
        rgba(255, 255, 255, 0.05) 1px,
        rgba(255, 255, 255, 0.05) 2px
      ),
      linear-gradient(to bottom, #2c3e50, #34495e);

    border-bottom-left-radius: 50px;
    border-bottom-right-radius: 50px;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;

    box-shadow:
      0 10px 20px rgba(0, 0, 0, 0.4),
      inset 0 2px 5px rgba(255, 255, 255, 0.1);

    border: 2px solid #2c3e50;
  }

  .pocket::after {
    content: "";
    position: absolute;
    top: 10px;
    left: 10px;
    right: 10px;
    bottom: 10px;
    border: 2px dashed #e67e22;
    border-bottom-left-radius: 40px;
    border-bottom-right-radius: 40px;
  }

  .pocket-wrapper:hover .photo-item {
    /* Sube la foto y endereza el ángulo */
    transform: translateY(-90px) rotate(0deg);
  }
</style>
