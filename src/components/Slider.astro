---
import "../styles/global.css";

const mensajes = [
  "En construcción",
  "En construcción",
  "En construcción",
  "En construcción",
  "En construcción",
  "En construcción",
];
---

<div class="slider" style="--width: 250px; --height: 80px; --quantity: {mensajes.length}">
  <div class="list">
    {mensajes.map((msg, index) => (
      <div
        class="item"
        style={`--position: ${index + 1}; --width: 250px; --height: 80px; --quantity: ${mensajes.length};`}
      >
        <div class="card">
          <p>{msg}</p>
        </div>
      </div>
    ))}
  </div>
</div>

<style>
    
  .card {
    width: 100%;
    height: 170px;
    border-radius: 8px;
    color: var(--color-text);
    display: flex;
    align-items: center;
    justify-content: space-around;
    font-weight: bold;
    text-align: center;
}
.card p {
    height: 160px;
    margin: 0;

}
.slider {      
    width: var(--width-container);
    max-width: 1200px;
    height: 230px;
    overflow: hidden;
    mask-image: linear-gradient(to right, transparent, #000 10% 90%, transparent);
    position: relative;
    background: var(--color-bgsecondary);
  }

  .slider .list {
    display: flex;
    width: 100%;
    min-width: calc(var(--width) * var(--quantity));
    position: relative;
  }

  .slider .list .item {
    width: var(--width);
    height: 100%;
    position: absolute;
    left: 100%;
    animation: slider 10s linear infinite;
    transition: filter 0.5s;
    animation-delay: calc(
      (10s / var(--quantity)) * (var(--position) - 1) - 10s
    ) !important;
  }

  @keyframes slider {
    from {
      left: 100%;
    }
    to {
      left: calc(var(--width) * -1);
    }
  }

</style>
