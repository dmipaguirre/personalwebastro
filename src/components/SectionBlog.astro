---
import "../styles/global.css";

const posts = Object.values(
  import.meta.glob("../pages/post/*.md", { eager: true }),
);
---

<section class="blog-container">
  {
    posts.map((post) => (
      <div class="box-blog" key={post.url}>
        <a href={post.url}>
          <div class="link-container">
            <div class="content">
              <h3 class="title">{post.frontmatter.title}</h3>
              <p class="text">{post.frontmatter.description}</p>
            </div>
            <p class="meta-info">
              by {post.frontmatter.author}
              <span class="dot-separator">
                <svg
                  aria-hidden="true"
                  focusable="false"
                  xmlns="http://www.w3.org/2000/svg"
                  width="14"
                  height="14"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  class="icon icon-tabler icons-tabler-filled icon-tabler-point"
                >
                  <>
                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                    <path d="M12 7a5 5 0 1 1 -4.995 5.217l-.005 -.217l.005 -.217a5 5 0 0 1 4.995 -4.783z" />
                  </>
                </svg>
              </span>
              {post.frontmatter.readingTime} min read
            </p>
          </div>
        </a>
      </div>
    ))
  }
</section>

<style>
  .blog-container {
    width: var(--width-container);
    max-width: 1200px;
    margin: 8rem auto 4rem auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 1.5rem;
    padding: 1.2rem 1.3rem;
  }

  .box-blog .link-container {
    padding: 1.5rem;
    transition: transform 0.2s ease;
    display: flex;
    flex-direction: column;
    justify-content: space-between; /* Esto separa el contenido */
    min-height: 100%; /* Asegura que ocupe todo el espacio */
  }

  .box-blog {
    background-color: var(--color-bgsecondary);
    border-radius: 1rem;
    min-width: 200px;
    flex: 1 1 300px;
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;
    display: flex; /*  AÃ±adido para que el enlace ocupe todo */

    & a {
      text-decoration: none;
      color: var(--color-text);
      display: flex; /*  Cambiado de block a flex */
      flex: 1; /*  Para que ocupe todo el espacio disponible */
    }

    &:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    & .title,
    & .text {
      padding: 0.5rem 0;
      margin: 0;
      transition: color 0.2s ease;
    }

    &:hover .title {
      color: var(--color-primary);
    }

    .title {
      font-size: 2.1rem;
      font-weight: 300;
      font-family: var(--font-title);
      line-height: 1.2;
    }

    .text {
      font-size: 1.4rem;
      font-family: var(--font-text);
      color: var(--color-text);
    }

    .meta-info {
      margin-top: auto;
      font-size: 0.9rem;
      color: var(--color-text);
      opacity: 0.8;
      font-family: var(--font-text);
    }
  }

  .dot-separator {
    display: inline-flex;
    align-items: center;
    margin: 0 0.3rem;
  }

  @media (width < 1200px) {
    .blog-container {
      width: 100%;
    }
  }

  @media (width < 500px) {
    .blog-container {
      margin-left: 0;
      margin-right: 0;
      width: 100%;
    }
  }
</style>
