---
const postFiles = import.meta.glob("../pages/post/*.md", { eager: true });
const posts = Object.values(postFiles)
  .filter(post => post?.frontmatter)
  .sort((a, b) => new Date(b.frontmatter.date) - new Date(a.frontmatter.date));
---

<article class="blog" aria-labelledby="blog-heading">
  <h2 id="blog-heading" class="blog-title">Blog</h2>
  
  <div class="container-card">
    {posts.map((post) => {
      const { frontmatter, url } = post;
      const { title, description, author, readingTime, image } = frontmatter;
      
      return (
        <section class="blog-card">
          <a href={url} aria-label={`Leer artículo: ${title}`}>
            <div class="card-content">
              <div class="image-wrapper">
              <img
                class="card-image"
                src={image?.url || '/placeholder.jpg'}
                alt={image?.alt || title}
                loading="lazy"
                width="240"
                height="180"
              />
              </div>
              <div class="text-container">
                <h3 class="card-title">{title}</h3>
                <p class="card-text">{description}</p>
                <div class="card-meta">
                  <p class="card-meta-text">
                    by {author}
                    <span class="meta-dot" aria-hidden="true">•</span>
                    <time datetime={`PT${readingTime}M`}>
                      {readingTime} min read
                    </time>
                  </p>
                </div>
              </div>
            </div>
          </a>
        </section>
      );
    })}
  </div>
</article>

<style>
  .blog {
    padding: 1.2rem 1.3rem;
    width: var(--width-container);
    max-width: 1200px;
    margin: 8rem auto 4rem auto;
  }

  .blog-title {
    font-size: 2.5rem;
    font-family: var(--font-title);
    font-weight: 300;
    text-align: center;
    color: var(--color-text);
  }

  .container-card {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
    gap: 3rem;
    margin-top: 3rem;
  }

  .blog-card {
    border-radius: 8px;
    background-color: var(--color-bgsecondary);
  }

  .blog-card a {
    text-decoration: none;
    color: var(--color-text);
  }

  .card-content {
    display: flex;
    gap: 1.2rem;
    height: 100%;
  }

  .image-wrapper {
    overflow: hidden;
    border-top-left-radius: 8px;
    border-bottom-left-radius: 8px;
    width: 240px;
    height: 100%;
    flex-shrink: 0;
  }

  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .card-image {
  transition: transform 0.4s ease, filter 0.4s ease;
}

.blog-card a:hover .card-image {
  transform: scale(1.1);
  filter: brightness(1.1);
}

.blog-card a:focus .card-image {
  transform: scale(1.1);
  filter: brightness(1.1);
}

.blog-card a:hover .card-title,
.blog-card a:focus .card-title {
  text-decoration: underline;
  color: var(--color-primary);
}

  .text-container {
    display: flex;
    flex-direction: column;
    padding: 1rem;
    gap: 0.8rem;
    flex: 1;
    min-width: 0;
  }

  .card-title {
    font-size: clamp(1.8rem, 3vw, 2.5rem);
    font-family: var(--font-title);
    font-weight: 300;
    line-height: 1.2;
  }

  .card-text {
    font-size: 1.4rem;
    line-height: 1.5;
    font-family: var(--font-text);
    color: var(--color-text);
  }

  .card-meta {
    margin-top: auto;
    font-size: 1.2rem;
    color: var(--color-primary);
    opacity: 60%;
  }

  .meta-dot {
    margin: 0 0.5rem;
  }

  @media (width < 800px) {
    .blog {
      margin: 4rem auto;
    }
    .container-card {
      grid-template-columns: 1fr;
    }

    .text-container p {
      font-size: 1.2rem;
    }
  }

  @media (width < 600px) {
    .card-content {
      flex-direction: column;
    }
    .image-wrapper {
      width: 100%;
      height: auto;
      border-radius: 8px 8px 0 0;
    }

    .card-image {
      width: 100%;
      height: 200px;
    }
  }
</style>