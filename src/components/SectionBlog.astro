---
import "../styles/global.css";

const posts = Object.values(import.meta.glob("../pages/post/*.md", { eager: true }));
---

<section class="blog-container">

  {posts.map((post) => (
    <div class="box-blog">
      <a href={post.url}>
        <div class="link-container">
          <div class="div-svg">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class={`icon icon-tabler icons-tabler-outline icon-tabler-${post.icon}`}
            >
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <path d="M12 5m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
              <path d="M17.723 7.41a7.992 7.992 0 0 0 -3.74 -2.162m-3.971 0a7.993 7.993 0 0 0 -3.789 2.216m-1.881 3.215a8 8 0 0 0 -.342 2.32c0 .738 .1 1.453 .287 2.132m1.96 3.428a7.993 7.993 0 0 0 3.759 2.19m4 0a7.993 7.993 0 0 0 3.747 -2.186m1.962 -3.43a8.008 8.008 0 0 0 .287 -2.131c0 -.764 -.107 -1.503 -.307 -2.203" />
              <path d="M5 17m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
              <path d="M19 17m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
            </svg>
          </div>
          <h3 class="title">{post.frontmatter.title}</h3>
          <p class="text">{post.frontmatter.description}</p>
        </div>
      </a>
    </div>
  ))}
</section>

<style>
  .blog-container {
    width: var(--width-container);
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 1.5rem;
    padding: 5rem 1.3rem;
  }

  .box-blog a {
    text-decoration: none;
    color: var(--color-text);
    display: block;
  }

  .link-container {
    padding: 1.5rem;
    transition: transform 0.2s ease;
  }

  .box-blog {
    background-color: var(--color-bgsecondary);
    border-radius: 1rem;
    min-width: 200px;
    flex: 1 1 300px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;

    &:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    & .title,
    & .text {
      padding: 0.5rem 0;
      margin: 0;
      transition: color 0.2s ease;
    }

    &:hover .title,
    &:hover .text {
      color: var(--color-primary);
    }

    .title {
      font-size: 2.1rem;
      font-weight: 600;
      font-family: "BebasNeue", sans-serif;
      line-height: 1.2;
    }

    .text {
      font-size: 1.4rem;
      font-family: "Instrument Serif", sans-serif;
      color: var(--color-text-muted);
    }
  }

  .div-svg {
    text-align: center;
    margin-bottom: 1rem;
    
    svg {
      width: 40px;
      height: 40px;
      
    }
  }

  @media (width < 768px) {
    .blog-container {
      grid-template-columns: 1fr;
      max-width: 500px;
    }
  }
</style>
