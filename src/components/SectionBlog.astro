---
import Breadcrumbs from "./Breadcrumbs.astro";

const postFiles = import.meta.glob("../pages/post/*.md", { eager: true });
const posts = Object.values(postFiles)
  .filter((post) => post?.frontmatter)
  .sort((a, b) => new Date(b.frontmatter.date) - new Date(a.frontmatter.date));
---

<section class="blog-section" aria-labelledby="blog-heading">
  <h2 id="blog-heading" class="blog-title">Blog</h2>
  <Breadcrumbs />
  <div class="container-card">
    {
      posts.map((post) => {
        const { frontmatter, url } = post;
        const { title, description, author, readingTime, image } = frontmatter;

        return (
          <article class="blog-card">
            <a href={url} aria-label={`Leer artículo: ${title}`}>
              <div class="card-content">
                <div class="image-wrapper">
                  <img
                    class="card-image"
                    src={image?.url || "/placeholder.jpg"}
                    alt={image?.alt || title}
                    loading="lazy"
                    width="240"
                    height="180"
                  />
                </div>
                <div class="text-container">
                  <div class="card-meta">
                    <p class="card-meta-text">
                      by {author}
                      <span class="meta-dot" aria-hidden="true" />
                      <time datetime={`PT${readingTime}M`}>
                        {readingTime} min read
                      </time>
                    </p>
                  </div>
                  <div class="card-container">
                    <h3 class="card-title">{title}</h3>
                    <p class="card-text">{description}</p>
                  </div>
                </div>
              </div>
            </a>
          </article>
        );
      })
    }
  </div>
</section>

<style>
  /* --- Estructura General --- */
  .blog-section {
    padding: 1.2rem 1.3rem;
    width: var(
      --width-container
    ); /* Asegúrate de que esta variable exista en global */
    max-width: 1200px;
    margin: 8rem auto 4rem auto;
  }

  .blog-title {
    font-size: 2.5rem;
    font-family: var(--font-title);
    font-weight: 300;
    text-align: center;
    color: var(--color-text);
    margin-bottom: 3rem;
  }

  .container-card {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2.3rem;
  }

  /* --- Tarjeta --- */
  .blog-card {
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
    border: 1px solid var(--color-bgsecondary);
    border-radius: 1.5rem;
    overflow: hidden;
    transition:
      border-color 0.3s ease,
      box-shadow 0.3s ease,
      transform 0.3s ease;
    height: auto;

  }

  .blog-card a {
    text-decoration: none;
    color: var(--color-text);
    display: block;
    cursor: pointer;
    height: 100%;
  }

  .card-content {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  /* --- Imagen --- */
  .image-wrapper {
    height: 200px; /* La imagen ocupa el 40% del ancho */
    position: relative;
    overflow: hidden;
  }

  .card-image {
    height: 100%;
    width: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  /* Efecto Zoom en imagen al hover */
  .blog-card:hover .card-image {
    transform: scale(1.05);
  }

  /* --- Texto --- */
  .text-container {
    display: flex;
    padding: 1.5rem;
    gap: 1rem;
  }

  .card-title {
    font-size: clamp(1.2rem, 2vw, 1.5rem);
    font-family: var(--font-title);
    font-weight: 600;
    line-height: 1.3;
    transition: color 0.3s ease;
    margin-bottom: 1rem;
  }

  .blog-card:hover .card-title {
    color: var(--color-primary);
  }

  .blog-card a:focus-visible {
    outline: 3px solid var(--color-primary);
    outline-offset: 4px;
  }

  .blog-card:hover {
    border-color: var(--color-primary);
    box-shadow: 0 0 2px var(--color-primary);
  }

  .card-text {
    font-size: 1.2rem;
    line-height: 1.6;
    opacity: 0.85;

    /* Truncar texto a 3 líneas */
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-meta {
    writing-mode: vertical-rl;
    transform: rotate(180deg);
    margin-right: 0.6rem;
    letter-spacing: 1px;
    font-size: 1rem;
    padding-top: 0.6rem;
    white-space: nowrap;
  }

  .meta-dot {
    display: inline-block;
    width: 4px;
    height: 4px;
    margin: 0.5rem 0;
    background-color: currentColor;
    border-radius: 50%;
    opacity: 0.4;
  }

  /* --- RESPONSIVE / MEDIA QUERIES --- */

  /* Punto de quiebre: Cuando la tarjeta se vuelve muy estrecha */
  @media (max-width: 800px) {
    .blog-section {
      margin: 4rem auto;
    }
    .card-content {
      flex-direction: column; /* Cambia a vertical: Imagen arriba, texto abajo */
      height: auto; /* La altura ya no es fija */
    }

    .image-wrapper {
      flex: none; /* Resetea el flex */
      width: 100%;
      height: 200px; /* Altura fija para la imagen en móvil */
    }

    .text-container {
      padding: 1.5rem;
    }
  }
</style>
